<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
    <name>mod_bionic_downloads</name>
    <author>Bionic Laboratories BLG GmbH</author>
    <creationDate>2025-06</creationDate>
    <copyright>(C) 2025 Bionic Laboratories BLG GmbH</copyright>
    <license>GNU General Public License version 2 or later</license>
    <version>1.1.0</version>
    <description>MOD_BIONIC_DOWNLOADS_DESC</description>
    <files>
        <filename module="mod_bionic_downloads">mod_bionic_downloads.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>
    <languages>
        <language tag="de-DE">language/de-DE/mod_bionic_downloads.ini</language>
        <language tag="en-GB">language/en-GB/mod_bionic_downloads.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" label="Grundeinstellungen">
                <field name="folder_path" type="text" label="Ordner-Pfad" default="images/webpdf" description="Pfad relativ zum Joomla-Root (ohne fuehrenden Slash)" />
                <field name="table_title" type="text" label="Tabellen-Ueberschrift" default="Downloads" />
                <field name="sort_order" type="list" label="Sortierung" default="name_asc">
                    <option value="name_asc">Name (A-Z)</option>
                    <option value="name_desc">Name (Z-A)</option>
                    <option value="size_asc">Groesse (klein-gross)</option>
                    <option value="size_desc">Groesse (gross-klein)</option>
                    <option value="date_asc">Datum (alt-neu)</option>
                    <option value="date_desc">Datum (neu-alt)</option>
                </field>
            </fieldset>
            <fieldset name="display" label="Anzeige">
                <field name="show_downloads" type="radio" label="Download-Counter anzeigen" default="1" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>
                <field name="show_description" type="radio" label="Beschreibungen anzeigen" default="1" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>
                <field name="show_size" type="radio" label="Dateigroesse anzeigen" default="1" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>
                <field name="show_date" type="radio" label="Datum anzeigen" default="0" class="btn-group">
                    <option value="1">Ja</option>
                    <option value="0">Nein</option>
                </field>
            </fieldset>
            <fieldset name="styling" label="Styling">
                <field name="bg_color" type="color" label="Hintergrund" default="#1a1a2e" />
                <field name="header_bg" type="color" label="Kopfzeile Hintergrund" default="#16213e" />
                <field name="text_color" type="color" label="Textfarbe" default="#ffffff" />
                <field name="accent_color" type="color" label="Akzentfarbe" default="#0d6efd" />
                <field name="hover_color" type="color" label="Hover Farbe" default="#0f3460" />
            </fieldset>
        </fields>
    </config>
</extension>
